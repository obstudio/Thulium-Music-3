{
    "header": [
        "add-tab",
        "open-file",
        "@separator",
        "toggle-menubar",
        "@separator",
        "@tabs"
    ],
    "tab": [
        "save",
        "save-as",
        "@separator",
        "close-tab",
        "close-others",
        "close-right"
    ],
    "menubar": [
        {
            "key": "file",
            "bind": "F",
            "content": [
                "add-tab",
                "open-file",
                "@separator",
                "save",
                "save-as",
                "save-all",
                "@separator",
                "close-tab",
                "close-others",
                "close-right"
            ]
        },
        {
            "key": "edit",
            "bind": "E",
            "content": [
                "undo",
                "redo",
                "@separator",
                "cut",
                "copy",
                "paste"
            ]
        },
        {
            "key": "view",
            "bind": "V",
            "content": [
                "toggle-menubar",
                "@separator",
                "@tabs"
            ]
        }
    ]
}
